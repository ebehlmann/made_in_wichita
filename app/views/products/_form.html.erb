<%= render('layouts/errors', :object => @product) %>

<%= form_for [:vendor, @product] do |f| %>
	<div class="form-group">
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>
	<div class="form-group">
		<%= f.label :description %>
		<%= f.text_area :description, size: "24x3" %>
	</div>
	<div class="form-group">
		<%= f.label :price %>
		<%= f.number_field :price, step: 0.01 %>
	</div>
	<%= f.submit(:class => "btn btn-primary") %>
<% end %>