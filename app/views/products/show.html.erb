<% content_for(:title, "Wichita-made products | Made in Wichita") %>

<h1><%= @product.name %></h1>

<p><%= @product.description %></p>
<p>Price: <%= number_to_currency @product.price %></p>

<%= image_tag @product.image.url(:medium) %>

<h3>This product is available from these vendors:</h3>
<ul>
	<% @product.vendors.each do |vendor| %>
		<li>
			<a href="/vendors/<%= vendor.id %>"><%= vendor.name %></a>
		</li>
	<% end %>
</ul>

<p><%= link_to "Back to products list", products_path, :class => "btn btn-default" %>
<%= link_to "Edit this product", edit_product_path(@product), :class => "btn btn-default" %>
<%= link_to "Delete this product", product_path(@product),
											:data => {:confirm => "Are you sure?",
																:method => "delete"},
											:class => "btn btn-danger" %>

											</p>		