<%= render('layouts/errors', :object => @vendor) %>

<%= form_for(@vendor) do |f| %>
	<div class="form-group">
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>
	<div class="form-group">
		<%= f.label :description %>
		<%= f.text_area :description, size: "24x3" %>
	</div>
	<div class="form-group">
		<%= f.label :owner %>
		<%= f.text_field :owner %>
	</div>
	<div class="form-group">
		<%= f.label :address %>
		<%= f.text_field :location %>
	</div>
	<div class="form-group">
		<%= f.label :website %>
		<%= f.url_field :website %>
	</div>
	<div class="form-group">
		<%= f.label :phone %>
		<%= f.telephone_field :phone %>
	</div>
	<%= f.submit(:class => "btn btn-primary") %>
<% end %>